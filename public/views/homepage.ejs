    </div>
    <div class="main-product-grid">
      <% products.forEach(data=> { %>
        <%const cateG=data.category.replace(/ /g,'-'); const pName=data.name.replace(/ /g,'-');console.log(pName)
          ;console.log(data.imageUrl)%>
          <div class="main-product">
            <div class="img-container">
              <i class="fa-regular fa-heart fa-border"></i>
              <img src="../images/61mtL65D4cL._AC_SX679__1_-removebg-preview.png">
            </div>
            <p>
              <%= data.name %>
            </p>
            <div>
              $<%= data.price %>
            </div>
          </div>
          <% }); %>
    </div>
  </div>


