<%- include('newHeader'); -%>
<%const userName = user.name; const userEmail = user.email;console.log(user);const userAddress = user.address.locality+" , "+user.address.state+" ," +user.address.pincode; %>
<div class="container mt-5 userCard">
    <div class="row">
        <div class="col-md-12 d-flex align-items-center">
            <img src="../images/User.jpg" class="rounded-circle mr-3" alt="User Image">
            <h4 class="mb-0">Hello, <%=userName%></h4>
        </div>
        <div class="col-md-12 mt-4">
            <div class="card mb-4">
                <div class="card-header">
                    Contact Information
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" value="" placeholder="<%=userEmail%>" disabled>
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile</label>
                            <input type="text" class="form-control" id="mobile" value="" placeholder="" disabled>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" value="" placeholder="<%=userAddress%>" disabled>
                        </div>
                        <button type="submit" class="round-black-btn">Edit</button>
                        <button type="submit" class="round-black-btn" style="display: none">Save</button>
                        <button type="submit" class="round-black-btn" style="display: none">Cancel</button>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    Payment Options
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="credit-card">Credit Card</label>
                            <input type="text" class="form-control" id="credit-card" value="**** **** **** 1234" disabled> 
                        </div>
                        <div class="form-group">
                            <label for="paypal">UPI</label>
                            <input type="email" class="form-control" id="paypal" value="user@paypal.com" disabled>
                        </div>
                        <a href="#" class="round-black-btn">Add Payment Method</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('newFooter'); -%>
